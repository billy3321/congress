<h1>Listing admin_videos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_videos.each do |admin_video| %>
      <tr>
        <td><%= admin_video.title %></td>
        <td><%= admin_video.description %></td>
        <td><%= admin_video.url %></td>
        <td><%= link_to 'Show', [:admin, admin_video] %></td>
        <td><%= link_to 'Edit', edit_admin_video_path(admin_video) %></td>
        <td><%= link_to 'Destroy', [:admin, admin_video], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_admin_video_path %>
