<h1>Listing admin_legislators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Party</th>
      <th>Description</th>
      <th>Constituency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_legislators.each do |admin_legislator| %>
      <tr>
        <td><%= admin_legislator.name %></td>
        <td><%= admin_legislator.party_id %></td>
        <td><%= admin_legislator.description %></td>
        <td><%= admin_legislator.constituency %></td>
        <td><%= link_to 'Show', [:admin, admin_legislator] %></td>
        <td><%= link_to 'Edit', edit_admin_legislator_path(admin_legislator) %></td>
        <td><%= link_to 'Destroy', [:admin, admin_legislator], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

