<h1>Listing parties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <td><%= party.image %></td>
        <td><%= link_to 'Show', [:admin, party] %></td>
        <td><%= link_to 'Edit', edit_admin_party_path(party) %></td>
        <td><%= link_to 'Destroy', [:admin, party], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Party', new_admin_party_path %>
